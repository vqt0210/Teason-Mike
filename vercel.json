{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "frontend/build" }
    },
    {
      "src": "backend/api/index.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",         
      "dest": "/backend/api/index.js"
    },
    {
      "src": "/(.*)",             
      "dest": "/frontend/build/$1"
    }
  ]
}
